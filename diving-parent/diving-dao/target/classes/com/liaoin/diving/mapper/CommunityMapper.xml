<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.liaoin.diving.mapper.CommunityMapper">
    <insert id="addCommunityNav">
        insert into t_community_nav(create_time,is_hidden,`name`,`order`) values(#{createTime},#{isHidden},#{name},#{order})
    </insert>
    <update id="updateCommunityNav">
        update t_community_nav set
        <if test="name != null">
            `name` = #{name},
        </if>
        <if test="order != null">
            `order` = #{order},
        </if>
        <if test="isHidden != null">
            `is_hidden` = #{isHidden}
        </if>
        where id = #{id}
    </update>
    <delete id="delCommunityNav">
        delete from t_community_nav where id = #{id}
    </delete>
    <select id="findById" resultType="com.liaoin.diving.entity.CommunityNav">
        select * from t_community_nav where id  = #{id}
    </select>
    <select id="codition" resultType="com.liaoin.diving.entity.CommunityNav">
        select * from t_community_nav
        <where>
            <if test="isHidden != null">
                  `is_hidden` like concat('%',#{isHidden},'%')
            </if>
            <if test="order != null">
                 and `order` like concat('%',#{order},'%')
            </if>
            <if test="name != null">
                 and  `name` like concat('%',#{name},'%')
            </if>
            <if test="createTime != null" >
                 and createTime like concat('%',#{createTime},'%')
            </if>

        </where>
        order by `order`
    </select>
    <select id="findAll" resultType="com.liaoin.diving.entity.CommunityNav">
        select * from t_community_nav where is_hidden = 1 order by `order`
    </select>
</mapper>